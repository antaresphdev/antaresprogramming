<h1 class="sr-only">{{ title }}</h1>

<section class="padding--l cards-grid">
  {% set posts = collections.posts | reverse %}
  {% for index in range(0, 4) %}
    {% set item = posts[index] %}
    {% set hasImage = loop.index0 % 4 === 0 %}
    <article class="card{{ " has-image" if hasImage }}">
      {% if hasImage %}
        <a href="{{ item.url }}">
          {% respimg
          src = item.data.image,
          width = "600",
          height = "337.5",
          sizes = "300, 600, 900, 1200",
          alt = item.data.title,
          class = "card__image",
          loading = "lazy"
 %}
        </a>
      {% endif %}
      <div class="card__body">
        <h2 class="card__title">
          <a class="card__link" href="{{ item.url }}">{{ item.data.title }}</a>
        </h2>
        <p>{{ item.data.description }}</p>
        <div class="spaced cluster">
          {% if item.data.author and authors[item.data.author] %}
            {% set author = authors[item.data.author] %}
            <a href="/authors/{{ item.data.author }}/" class="fg-theme-color card__link">{{ author.name }}</a>
          {% else %}
            <span class="weight-bold">Anonymous</span>
          {% endif %}
          <time datetime="{{ item.date | machineReadableDate }}">{{ item.date | humanReadableDate }}</time>
        </div>
      </div>
    </article>
  {% endfor %}
</section>
<div class="cluster center-justified padding">
  <a href="/articles/" class="button secondary">Tingnan lahat</a>
</div>

{% include "components/newsletter.njk" %}

<section class="padding--l bordered box">
  <h2>Latest infographics</h2>
  <div class="padding--l gap--l horizontal scroller" style="justify-content: center">
    {% for slide in collections.slidesets %}
      {% if not slide.data.hidden %}
        <a href="{{ slide.url }}" class="slideset-link" style="--bg-image: url('{{ slide.data.blurredCover }}')">
          <img src="{{ slide.data.cover }}" alt="{{ slide.data.title }}" class="slide-cover">
          <div class="slideset-details">
            <div class="slideset__inner">
              <strong class="fs-5">{{ slide.data.title }}</strong>
              <p class="margin--none">{{ slide.data.description }}</p>
            </div>
          </div>
        </a>
      {% endif %}
    {% endfor %}
  </div>
</section>

